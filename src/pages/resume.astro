---
import Layout from '@/layouts/Layout.astro';
import LinkTag from '@/components/UI/LinkTag.astro';
import Button from '@/components/UI/Button.astro';
import BreakLine from '@/components/UI/BreakLine.astro';
import ResumeSection from '@/components/content/ResumeSection.astro';

import type { ResumeData } from '@/ts/resume';
import resumeDataJson from '@/content/resume/resume.json';

const resumeData = resumeDataJson as ResumeData;

interface Props {
  profileImage?: string;
  gifImage?: string;
}

const base = import.meta.env.BASE_URL;

const {
  profileImage = 'images/about/ying.jpg',
  gifImage = 'images/about/hihi.webp',
} = Astro.props;


const profileImagePath = `${base}${profileImage}`;
const gifImagePath = `${base}${gifImage}`;

---

<Layout
  title="Resume"
  description="Ying-Shiuan Chen loves creating functional yet fun interactions to humanize technology!"
  image={profileImagePath}
  keywords="Ying-Shiuan Chen, software engineer, product designer, developer, interaction">
  
  <section class="aboutMe">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
      <!-- Images section -->
      <div class="lg:col-span-4 flex flex-col items-center gap-4">
        <div class="static_image group">
          <!-- static profile image -->
          <img
            src={profileImagePath}
            alt="Profile Picture"
            class="profile_image group-hover:opacity-0"
          />

          <!-- GIF image -->
          <img
            src={gifImagePath}
            alt="Animated GIF"
            class="profile_image absolute top-0 left-0 opacity-0 transition-opacity duration-500 group-hover:opacity-100"
          />
        </div>
      </div>

      <!-- Text section -->
      <div class="lg:col-span-8 space-y-6 text-center">
        <h3>Hi! I'm Ying.</h3>
        <p>
          As an <LinkTag tags={['Interaction Developer and Designer']} />, who
          builds tools that make experiences intuitive and enjoyable.
        </p>
        <p>
          I taught myself to code<span class="material-symbols-outlined">code</span>to build interactive applications, AR/VR prototypes, and design systems that bridge user needs with technical possibilities.
        </p>
        <div class="flex justify-end">
          <Button
            href={`${base}content/resume/Ying-Shiuan Chen_Resume.pdf`}
            target="_blank"
            label="PDF Resume"
            color="primary"
            variant="outline"
            size="sm"
          />
        </div>
      </div>
    </div>
    <div></div>
  </section>

  <BreakLine />

  <ResumeSection title="EXPERIENCE" items={resumeData.experience} />
  <ResumeSection title="OTHER INITIATIVES" items={resumeData.initiatives} />
  <ResumeSection title="EDUCATION" items={resumeData.education} showDivider={false}/>
  <ResumeSection title="CERTIFICATION" items={resumeData.certification} />
  <ResumeSection title="TOOLS & SKILLS" items={resumeData.skills} />
  <ResumeSection title="LANGUAGE" items={resumeData.languages} />

  <div class="max-w-[80rem] mx-auto my-[2rem] text-center">
    <p class="my-[2rem] px-[2.5rem]">
      As an interaction designer and developer, I focus on building intuitive,
      interactive systems that seamlessly bridge digital and physical
      experiences. Blending creative problem-solving with technical precision to
      transform complex challenges into scalable, human-centered solutions.
    </p>
  </div>

  <BreakLine />


  <style>
    @reference "@/styles/global.css";

    .aboutMe {
      @apply px-[2.5rem] mt-[12rem] mb-[2rem] mx-auto;
    }

    .static_image {
      @apply relative w-72 h-72;
    }

    .profile_image {
      @apply w-full h-full rounded-full transition-opacity duration-500;
    }

    .showgif {
      @apply hidden;
    }

    @media (min-width: 900px) {
      .aboutMe {
        @apply max-w-[80rem];
      }
    }
  </style>
</Layout>
