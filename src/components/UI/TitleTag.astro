---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

{
  tags.length > 0 && (
    <ul class="tags_container">
      {tags.map((t) => (
        <li class="tags">{t}</li>
      ))}
    </ul>
  )
}

<style>
  @reference "@/styles/global.css";
  .tags_container {
    @apply flex mt-[2rem] gap-2 flex-wrap;
  }
  .tags {
    @apply text-lg font-medium border-[1.5px] border-[var(--color-text-primary)] rounded-[6px] p-[0.2rem];
  }

  .tags:hover {
    @apply border-[var(--color-caption-primary)] bg-[var(--color-text-hover)] text-[var(--color-border)] shadow-[0.1rem_0.1rem_var(--color-caption-secondary)] transition duration-300;
  }

  @media (min-width: 900px) {
    .tags_container {
      @apply max-w-[80rem] mx-auto;
    }
  }
</style>
