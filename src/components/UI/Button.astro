---
interface Props {
  label: string;
  id?: string;
  href?: string; // optional link
  target?: '_blank' | '_self' | '_parent' | '_top'; 
  type?: 'button' | 'submit'; // for <button>
  variant?: 'solid' | 'outline'; // style variants
  color?: 'primary' | 'blue' | 'red' | 'green' | 'gray'; // color theme
  size?: 'sm' | 'md' | 'lg'; // button size
  rounded?: boolean; // rounded corners
}

const {
  id,
  label,
  href,
  target,
  type = 'button',
  variant = 'solid',
  color = 'blue',
  size = 'md',
  rounded = true,
} = Astro.props;

// Tailwind styles
const baseStyles = 'font-semibold focus:outline-none transition duration-300';

const colorClasses = {
  solid: {
    primary:
      'border-[1.5px] bg-[var(--color-text-hover)] text-[var(--color-border)] hover:bg-[var(--color-text-hover)] hover:text-[var(--color-border)] hover:border-[var(--color-caption-primary)] hover:shadow-[0.1rem_0.1rem_var(--color-caption-secondary)]',
    blue: 'bg-blue-500 text-white hover:bg-blue-600',
    red: 'bg-red-500 text-white hover:bg-red-600',
    green: 'bg-green-500 text-white hover:bg-green-600',
    gray: 'bg-gray-500 text-white hover:bg-gray-600',
  },
  outline: {
    primary:
      'border-[1.5px] border-[var(--color-text-primary)] text-[var(--color-text-primary)] hover:bg-[var(--color-text-hover)] hover:text-[var(--color-border)] hover:border-[var(--color-caption-primary)] hover:shadow-[0.1rem_0.1rem_var(--color-caption-secondary)]',
    blue: 'border border-blue-500 text-blue-500 hover:bg-blue-500 hover:text-white',
    red: 'border border-red-500 text-red-500 hover:bg-red-500 hover:text-white',
    green:
      'border border-green-500 text-green-500 hover:bg-green-500 hover:text-white',
    gray: 'border border-gray-500 text-gray-500 hover:bg-gray-500 hover:text-white',
  },
};

const sizeClasses = {
  sm: 'px-3 py-1 text-sm',
  md: 'px-5 py-2 text-base',
  lg: 'px-6 py-3 text-lg',
};

const roundedClass = rounded ? 'rounded-full' : '';
const buttonClasses = `${baseStyles} ${colorClasses[variant][color]} ${sizeClasses[size]} ${roundedClass}`;
---

{
  href ? (
    <a href={href} target={target} rel={target === '_blank' ? 'noopener noreferrer' : undefined} class={buttonClasses}>
      {label}
    </a>
  ) : (
    <button id={id} type={type} class={buttonClasses}>
      {label}
    </button>
  )
}
